<!-- colorButton.html -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Button Color Changer</title>
  <script>
    function changeColor(btn) {
      const colors = ['red', 'blue', 'green', 'purple'];
      btn.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
    }
  </script>
</head>
<body>
  <button onclick="changeColor(this)">Click to Change Color</button>
</body>
</html>

<!-- greetingAlert.html -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Greeting Alert</title>
  <script>
    function greet() {
      const hour = new Date().getHours();
      let message = '';
      if (hour < 12) message = 'Good morning!';
      else if (hour < 18) message = 'Good afternoon!';
      else message = 'Good evening!';
      alert(message);
    }
  </script>
</head>
<body onload="greet()">
</body>
</html>

<!-- calculator.html -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Simple Calculator</title>
  <script>
    function calculate() {
      const num1 = parseFloat(document.getElementById('num1').value);
      const num2 = parseFloat(document.getElementById('num2').value);
      document.getElementById('result').textContent = `Sum: ${num1 + num2}`;
    }
  </script>
</head>
<body>
  <h2>Calculator</h2>
  <input type="number" id="num1" placeholder="First number">
  <input type="number" id="num2" placeholder="Second number">
  <button onclick="calculate()">Add</button>
  <p id="result"></p>
</body>
</html>
